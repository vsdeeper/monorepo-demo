  "include": ["packages/components/**/*", "packages/components/**/*.vue", "auto-imports.d.ts"],
  "exclude": ["packages/components/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.components.tsbuildinfo",
